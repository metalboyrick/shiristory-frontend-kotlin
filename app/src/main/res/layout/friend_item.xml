<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/friend_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:layout_gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend_profile_picture"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/friend_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/contact_default_friend_name"
                android:textSize="25sp">

            </TextView>

        </LinearLayout>


        <TextView
            android:id="@+id/remove_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_baseline_cancel_24"
            android:drawableTint="@color/red_400"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

        </TextView>
    </RelativeLayout>


</LinearLayout>